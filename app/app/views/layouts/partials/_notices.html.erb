<div class="flash-notices">
  <% flash.each do |flash_type, message| %>
    <div class="alert alert-<%=flash_type %>">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p><%= message %></p>
    </div>
  <% end %>
</div>