<% if prompts.any? %>
  <% prompts.each do |prompt| %>
    <div class="prompt" id="prompt-<%=prompt.id%>">
      <h4>Prompted at <%=prompt.created_at.strftime("%H-%m-%d@%H:%M:%S")%></h4>
      <h5>Orignal id: <%=prompt.original_index%></h5>
      <p><%=prompt.content%></p>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">None found</h4>
    <p>There are no prompts, matching the <em>searched words</em> to display.</p>
  </div>
<% end %>